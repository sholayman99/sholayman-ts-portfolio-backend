{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",      // Compiled JavaScript files will go here
    "rootDir": "./src",      // Your TypeScript source files are in the src folder
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",          // Include TypeScript files from src
    "index.ts"              // Include index.ts as it is in the root
  ],
  "exclude": [
    "node_modules",         // Exclude node_modules folder
    "dist"                  // Exclude the dist folder
  ]
}
